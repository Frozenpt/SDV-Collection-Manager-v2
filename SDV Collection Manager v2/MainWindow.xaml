<Window x:Name="Manager"
        x:Class="SDV_Collection_Manager_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDV_Collection_Manager_v2"
        xmlns:managers="clr-namespace:Managers"
        xmlns:commands="clr-namespace:Commands"
        xmlns:ag="clr-namespace:WpfAutoGrid;assembly=WpfAutoGrid"
        Title="Stardew Valley Manager"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Cursor="Hand"
        BorderThickness="0"
        Background="#02727272"
        AllowsTransparency="True"
        WindowStyle="None">
    <Window.Resources>
        <managers:CollectionsXMLManager x:Key="collections" />
        <managers:CalendarManager x:Key="calendar" />
        <managers:OptionsMenu x:Key="options" />
        <managers:FarmManager x:Key="farmManager" />
        <!--Options Tab Image-->
        <BitmapImage x:Key="optionsMenuTab"
                     UriSource="images/Options.png" />
        <BitmapImage x:Key="resetIcon"
                     UriSource="images/reset.png" />
        <BitmapImage x:Key="closeIcon"
                     UriSource="images/close.png" />
        <BitmapImage x:Key="minimizeIcon"
                     UriSource="images/minimize.png" />
        <BitmapImage x:Key="helpIcon"
                     UriSource="images/help.png" />

        <!--#region Collection Tab Images -->
        <BitmapImage x:Key="shippedItemsTab"
                     UriSource="images/tabitems/shippeditemsTabImg.png" />
        <BitmapImage x:Key="fishingTab"
                     UriSource="images/tabitems/fishingTabImg.png" />
        <BitmapImage x:Key="artifactsTab"
                     UriSource="images/tabitems/artifactsTabImg.png" />
        <BitmapImage x:Key="mineralsTab"
                     UriSource="images/tabitems/mineralsTabImg.png" />
        <BitmapImage x:Key="cookingTab"
                     UriSource="images/tabitems/cookingTabImg.png" />
        <!--#endregion-->
        <!--#region Brushes-->
        <SolidColorBrush x:Key="RedBrush"
                         Color="Red" />
        <SolidColorBrush x:Key="SolidBorderBrush"
                         Color="#FFB14E05" />
        <SolidColorBrush x:Key="UnselectedBackground"
                         Color="#FFF0AF6A" />
        <SolidColorBrush x:Key="SelectedBackGround"
                         Color="#FFDE8A32" />
        <SolidColorBrush x:Key="CalendarBackground"
                         Color="#FFFBEBC2" />
        <SolidColorBrush x:Key="CalendarBackgroundNote"
                         Color="#FFC3E29C" />
        <SolidColorBrush x:Key="SpringSelected"
                         Color="#FF60FF30" />
        <SolidColorBrush x:Key="SpringUnselected"
                         Color="#FF2B742C" />
        <SolidColorBrush x:Key="SummerSelected"
                         Color="#FFFFAC00" />
        <SolidColorBrush x:Key="SummerUnselected"
                         Color="#FFA47229" />
        <SolidColorBrush x:Key="FallSelected"
                         Color="#FFEA45E0" />
        <SolidColorBrush x:Key="FallUnselected"
                         Color="#FF853560" />
        <SolidColorBrush x:Key="WinterSelected"
                         Color="#FF46C7FF" />
        <SolidColorBrush x:Key="WinterUnselected"
                         Color="#FF3E68A0" />
        <!--#endregion-->
        <!--Collection TabItem Styles-->
        <Style x:Key="generalTab"
               TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border"
                                    Margin="0,0,0,-3"
                                    Background="{StaticResource UnselectedBackground}"
                                    BorderBrush="{StaticResource  SolidBorderBrush}"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="5,0,0,5"
                                    Height="35"
                                    Width="Auto">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,2,10,2"
                                                  RecognizesAccessKey="True" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Panel.ZIndex"
                                        Value="50" />
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="{StaticResource SelectedBackGround}" />
                                <Setter TargetName="Border"
                                        Property="BorderThickness"
                                        Value="2,2,2,2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Spring TabItems-->
        <Style x:Key="spring"
               TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border"
                                    Margin="0,0,1,-1"
                                    Background="{StaticResource SpringUnselected}"
                                    BorderBrush="{StaticResource  SpringSelected}"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="1,1,1,1"
                                    Height="35"
                                    Width="Auto">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,2,10,2"
                                                  RecognizesAccessKey="True" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Panel.ZIndex"
                                        Value="50" />
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="{StaticResource SpringSelected}" />
                                <Setter TargetName="Border"
                                        Property="BorderThickness"
                                        Value="2,2,2,2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Summer TabItems-->
        <Style x:Key="summer"
               TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border"
                                    Margin="1,0,1,-1"
                                    Background="{StaticResource SummerUnselected}"
                                    BorderBrush="{StaticResource  SummerSelected}"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="1,1,1,1"
                                    Height="35"
                                    Width="Auto">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,2,10,2"
                                                  RecognizesAccessKey="True" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Panel.ZIndex"
                                        Value="50" />
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="{StaticResource SummerSelected}" />
                                <Setter TargetName="Border"
                                        Property="BorderThickness"
                                        Value="2,2,2,2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Fall TabItems-->
        <Style x:Key="fall"
               TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border"
                                    Margin="1,0,1,-1"
                                    Background="{StaticResource FallUnselected}"
                                    BorderBrush="{StaticResource  FallSelected}"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="1,1,1,1"
                                    Height="35"
                                    Width="Auto">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,2,10,2"
                                                  RecognizesAccessKey="True" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Panel.ZIndex"
                                        Value="50" />
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="{StaticResource FallSelected}" />
                                <Setter TargetName="Border"
                                        Property="BorderThickness"
                                        Value="2,2,2,2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Winter TabItems-->
        <Style x:Key="winter"
               TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border"
                                    Margin="1,0,0,-1"
                                    Background="{StaticResource WinterUnselected}"
                                    BorderBrush="{StaticResource  WinterSelected}"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="1,1,1,1"
                                    Height="35"
                                    Width="Auto">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,2,10,2"
                                                  RecognizesAccessKey="True" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Panel.ZIndex"
                                        Value="50" />
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="{StaticResource WinterSelected}" />
                                <Setter TargetName="Border"
                                        Property="BorderThickness"
                                        Value="2,2,2,2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Search box placeholder text-->
        <Style x:Key="placeHolder"
               TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBox Text="{Binding Path=Text,
												RelativeSource={RelativeSource TemplatedParent}, 
												Mode=TwoWay,
												UpdateSourceTrigger=PropertyChanged}"
                                     x:Name="searchitem"
                                     Background="Transparent"
                                     Panel.ZIndex="2" />
                            <TextBox Text="{TemplateBinding Tag}"
                                     Background="{TemplateBinding Background}"
                                     Panel.ZIndex="1">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground"
                                                Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Text, Source={x:Reference searchitem}}"
                                                         Value="">
                                                <Setter Property="Foreground"
                                                        Value="LightGray" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Calendar Column Headers-->
        <Style TargetType="{x:Type ColumnDefinition}">
            <Setter Property="Width"
                    Value="100" />
        </Style>
        <!--Calendar Day Buttons-->
        <Style TargetType="{x:Type ToggleButton}">
            <Setter Property="Background"
                    Value="{StaticResource CalendarBackgroundNote}" />
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Path=PlayerNote}" 
                                   Value=""/>
                        <Condition Binding="{Binding Path=CropNote}"
                                   Value="" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background"
                            Value="{StaticResource CalendarBackground}" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
        <!--GroupBox-->
        <BorderGapMaskConverter x:Key="BorderGapMaskConverter" />
        <Style x:Key="{x:Type GroupBox}"
               TargetType="{x:Type GroupBox}">
            <Setter Property="BorderBrush"
                    Value="Gray" />
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="4" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="4" />
                            </Grid.RowDefinitions>
                            <Border CornerRadius="4"
                                    Grid.Row="1"
                                    Grid.RowSpan="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="Transparent"
                                    Background="{TemplateBinding Background}" />
                            <!-- ContentPresenter for the header -->
                            <Border x:Name="Header"
                                    Padding="6,0,6,0"
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="1">
                                <ContentPresenter ContentSource="Header"
                                                  RecognizesAccessKey="True" />
                            </Border>
                            <!-- Primary content for GroupBox -->
                            <ContentPresenter Grid.Row="2"
                                              Grid.Column="1"
                                              Grid.ColumnSpan="2"
                                              Margin="{TemplateBinding Padding}" />
                            <Border CornerRadius="0"
                                    Grid.Row="1"
                                    Grid.RowSpan="3"
                                    Grid.ColumnSpan="4"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <Border.OpacityMask>
                                    <MultiBinding Converter="{StaticResource BorderGapMaskConverter}"
                                                  ConverterParameter="6">
                                        <Binding ElementName="Header"
                                                 Path="ActualWidth" />
                                        <Binding RelativeSource="{RelativeSource Self}"
                                                 Path="ActualWidth" />
                                        <Binding RelativeSource="{RelativeSource Self}"
                                                 Path="ActualHeight" />
                                    </MultiBinding>
                                </Border.OpacityMask>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <TabControl Name="MainTab"
                    Background="#02000000"
                    BorderBrush="{x:Null}"
                    SelectedIndex="1"
                    DockPanel.Dock="Bottom">
            <TabItem Name="Options"
                     BorderBrush="Black"
                     BorderThickness="1"
                     Background="White"
                     Margin="0,0,0,-2">
                <TabItem.Header>
                    <Image Source="{Binding Source={StaticResource optionsMenuTab}}"
                           Width="22"
                           Height="20" />
                </TabItem.Header>
                <Border BorderBrush="{Binding Mode=OneWay, Source={StaticResource SolidBorderBrush}}"
                        BorderThickness="2"
                        Margin="0,0.5,0,0"
                        MinWidth="350"
                        MinHeight="350">
                    <StackPanel Background="{Binding Mode=OneWay, Source={StaticResource UnselectedBackground}}">
                        <GroupBox Header="Calendar Options"
                                  FontWeight="Bold"
                                  BorderThickness="1.5"
                                  BorderBrush="{Binding Mode=OneWay, Source={StaticResource SolidBorderBrush}}">
                            <StackPanel>
                                <CheckBox Content="Greenhouse Mode"
                                          ToolTip="Allow non-season crops to be planted in all seasons."
                                          FontWeight="Normal"
                                          IsChecked="{Binding GreenHouseMode, Source={StaticResource options}}" />
                                <CheckBox Content="Crop icon on yielding day"
                                          ToolTip="Display the planted crop icon on yielding day instead."
                                          FontWeight="Normal"
                                          IsChecked="{Binding IconOnYield, Source={StaticResource options}}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Border>
            </TabItem>
            <TabItem Header="Collections"
                     x:Name="tabItem"
                     Width="Auto"
                     Style="{Binding Source={StaticResource generalTab}}">
                <StackPanel>
                    <TextBox Name="searchitem"
                             Style="{StaticResource placeHolder}"
                             Tag="Search item..."
                             Text="{Binding Search, Source={StaticResource collections}, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="2"
                             Margin="0"
                             Background="White"
                             ToolTip="{Binding searchTooltip, Source={StaticResource collections}}" />
                    <TabControl x:Name="Collections"
                                BorderBrush="{Binding Mode=OneWay, Source={StaticResource SolidBorderBrush}}"
                                BorderThickness="4,4,4,4"
                                Background="{Binding Mode=OneWay, Source={StaticResource UnselectedBackground}}"
                                TabStripPlacement="Left"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                        <TabItem x:Name="ShippedItems"
                                 Style="{Binding Source={StaticResource generalTab}}"
                                 PreviewMouseWheel="ShippedItems_PreviewMouseWheel">
                            <TabItem.Header>
                                <Image x:Name="shippeditemsTab"
                                       Source="{Binding Mode=OneWay, Source={StaticResource shippedItemsTab}}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Width="33"
                                       Height="21" />
                            </TabItem.Header>
                            <Grid>
                                <TabControl x:Name="Pages"
                                            BorderBrush="{Binding Mode=OneWay, Source={StaticResource SolidBorderBrush}}"
                                            BorderThickness="4,4,4,4"
                                            Background="{Binding Mode=OneWay, Source={StaticResource UnselectedBackground}}"
                                            TabStripPlacement="Top"
                                            Width="Auto"
                                            Height="Auto"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch">
                                    <TabItem x:Name="PageOne"
                                             Header="Page One"
                                             HorizontalContentAlignment="Stretch"
                                             Margin="0"
                                             FontFamily="Stardew Valley"
                                             FontSize="18"
                                             Style="{Binding Source={StaticResource generalTab}}">
                                        <ItemsControl ItemsSource="{Binding PageOneCollection, Source={StaticResource collections}}"
                                                      Width="540"
                                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                      Margin="0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding Command="{Binding _openWebpage, Source={StaticResource collections}}"
                                                                          MouseAction="MiddleClick"
                                                                          CommandParameter="{Binding Mode=OneWay}" />
                                                        </TextBlock.InputBindings>
												<Hyperlink Command="{Binding _updateItem, Source={StaticResource collections}}"
                                                           CommandParameter="{Binding Mode=OneWay}"
                                                           TextDecorations="{x:Null}">
											<Image HorizontalAlignment="Left"
                                                            Width="50"
                                                            Height="50"
                                                            VerticalAlignment="Top"
                                                            ToolTip="{Binding Name}"
                                                            Margin="2,2,1,1"
                                                            Source="{Binding Img}">
												<Image.Style>
													<Style TargetType="{x:Type Image}">
														<Style.Triggers>
															<DataTrigger Value="True"
                                                                            Binding="{Binding Status, UpdateSourceTrigger=PropertyChanged}">
																<Setter Property="Opacity"
                                                                                Value="1" />
																<Setter Property="Effect">
																	<Setter.Value>
																		<DropShadowEffect Opacity="0.5"
                                                                                          Direction="225"
                                                                                          ShadowDepth="4"
                                                                                          BlurRadius="5" />
																	</Setter.Value>
																</Setter>
															</DataTrigger>
															<DataTrigger Binding="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                                                            Value="False">
																<Setter Property="Opacity"
                                                                                Value="0.4" />
																<Setter Property="Effect">
																	<Setter.Value>
																		<DropShadowEffect Opacity="0.2"
                                                                                          Direction="225"
                                                                                          ShadowDepth="4"
                                                                                          BlurRadius="5" />
																	</Setter.Value>
																</Setter>
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</Image.Style>
											</Image>
												</Hyperlink>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </TabItem>
                                    <TabItem x:Name="PageTwo"
                                             Header="Page Two"
                                             HorizontalContentAlignment="Stretch"
                                             Margin="0"
                                             FontFamily="Stardew Valley"
                                             FontSize="18"
                                             Style="{Binding Source={StaticResource generalTab}}">
                                        <ItemsControl Width="540"
                                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                      Margin="0"
                                                      ItemsSource="{Binding PageTwoCollection, Source={StaticResource collections}}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding Command="{Binding _openWebpage, Source={StaticResource collections}}"
                                                                          MouseAction="MiddleClick"
                                                                          CommandParameter="{Binding Mode=OneWay}" />
                                                        </TextBlock.InputBindings>
												<Hyperlink Command="{Binding _updateItem, Source={StaticResource collections}}"
                                                           CommandParameter="{Binding Mode=OneWay}"
                                                           TextDecorations="{x:Null}">
											<Image HorizontalAlignment="Left"
                                                            Width="50"
                                                            Height="50"
                                                            VerticalAlignment="Top"
                                                            ToolTip="{Binding Name}"
                                                            Margin="2,2,1,1"
                                                            Source="{Binding Img}">
												<Image.Style>
													<Style TargetType="{x:Type Image}">
														<Style.Triggers>
															<DataTrigger Value="True"
                                                                            Binding="{Binding Status, UpdateSourceTrigger=PropertyChanged}">
																<Setter Property="Opacity"
                                                                                Value="1" />
																<Setter Property="Effect">
																	<Setter.Value>
																		<DropShadowEffect Opacity="0.5"
                                                                                          Direction="225"
                                                                                          ShadowDepth="4"
                                                                                          BlurRadius="5" />
																	</Setter.Value>
																</Setter>
															</DataTrigger>
															<DataTrigger Binding="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                                                            Value="False">
																<Setter Property="Opacity"
                                                                                Value="0.4" />
																<Setter Property="Effect">
																	<Setter.Value>
																		<DropShadowEffect Opacity="0.2"
                                                                                          Direction="225"
                                                                                          ShadowDepth="4"
                                                                                          BlurRadius="5" />
																	</Setter.Value>
																</Setter>
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</Image.Style>
											</Image>
												</Hyperlink>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="Fishing"
                                 Style="{Binding Source={StaticResource generalTab}}">
                            <TabItem.Header>
                                <Image x:Name="fishTab"
                                       Source="{Binding Mode=OneWay, Source={StaticResource fishingTab}}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Width="33"
                                       Height="21" />
                            </TabItem.Header>
                            <ItemsControl Width="540"
                                          ItemsSource="{Binding FishCollection, Source={StaticResource collections}}"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          Margin="0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.InputBindings>
                                                <MouseBinding Command="{Binding _openWebpage, Source={StaticResource collections}}"
                                                              MouseAction="MiddleClick"
                                                              CommandParameter="{Binding Mode=OneWay}" />
                                            </TextBlock.InputBindings>
												<Hyperlink Command="{Binding _updateItem, Source={StaticResource collections}}"
                                                           CommandParameter="{Binding Mode=OneWay}"
                                                           TextDecorations="{x:Null}">
											<Image HorizontalAlignment="Left"
                                                   Width="50"
                                                   Height="50"
                                                   VerticalAlignment="Top"
                                                   ToolTip="{Binding Name}"
                                                   Margin="2,2,1,1"
                                                   Source="{Binding Img}">
												<Image.Style>
													<Style TargetType="{x:Type Image}">
														<Style.Triggers>
															<DataTrigger Value="True"
                                                                         Binding="{Binding Status, UpdateSourceTrigger=PropertyChanged}">
																<Setter Property="Opacity"
                                                                        Value="1" />
																<Setter Property="Effect">
																	<Setter.Value>
																		<DropShadowEffect Opacity="0.5"
                                                                                          Direction="225"
                                                                                          ShadowDepth="4"
                                                                                          BlurRadius="5" />
																	</Setter.Value>
																</Setter>
															</DataTrigger>
															<DataTrigger Binding="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                                                         Value="False">
																<Setter Property="Opacity"
                                                                        Value="0.4" />
																<Setter Property="Effect">
																	<Setter.Value>
																		<DropShadowEffect Opacity="0.2"
                                                                                          Direction="225"
                                                                                          ShadowDepth="4"
                                                                                          BlurRadius="5" />
																	</Setter.Value>
																</Setter>
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</Image.Style>
											</Image>
												</Hyperlink>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
